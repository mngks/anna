<%= render 'shared/user-profile' %>
<% if @user == current_user %>
<%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-primary" %>
<div class="my_meetings d-flex flex-row mb-3">
    <div class="upcoming-meetings p-2">Upcoming Meetings</div>
    <div class="completed-meetings p-2">Completed Meetings</div>
</div>
<% end %>
<div>
    <%= @user.bio %>
</div>
<div>
    <h4> Where to Meet </h4>
    <p>Preferred Meeting Time:
        <% if @user.preferred_start_time %>
        <%= @user.preferred_start_time.strftime("%I:%M %p") %> -
        <% else %>
        No preference set yet
        <% end %>
        <% if @user.preferred_end_time %>
        <%= @user.preferred_end_time.strftime("%I:%M %p")  %>
        <% end %>
    </p>
    <p>Preferred Pick-Up Day:
        <% if @user.pickup_days %>
        <%= @user.pickup_days %>
        <% else %>
        No preferred days set yet
        <% end %>
        <p>Preferred Location:</p>
</div>
<ul class="list-inline tabs-underlined">
    <li>
        <%= link_to "Listings", user_foods_path(@user), remote: true, id: "listings", class: "tab-underlined active" %>
    </li>
    <li>
        <%= link_to "Reviews", user_reviews_path(@user), remote: true, id: "reviews", class: "tab-underlined" %>
    </li>
</ul>
<div class="tab-content">
    <% if @user.foods.any? %>
    <%= render 'foods/card', user: @user %>
    <% else %>
    <p> No listings yet </p>
    <% end %>
</div>
