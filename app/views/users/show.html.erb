<%= render 'shared/user-profile' %>
<%= @user.donor.bio %>
<h2> Where to Meet </h2>
<p>Preferred Pick-Up Time:
    <%= @user.donor.pickup_start_time.strftime("%I:%M %p") %> -
    <%= @user.donor.pickup_end_time.strftime("%I:%M %p")  %>
</p>
<p>Preferred Pick-Up Day:
    <%= @user.donor.pickup_days %>
    <p>Preferred Location:</p>
    <ul class="list-inline tabs-underlined">
        <li>
            <a href="#" class="tab-underlined active">Listings</a>
        </li>
        <li>
            <a href="#" class="tab-underlined">Reviews</a>
        </li>
    </ul>
    <div class="card-vert-grid">
        <% @user.foods.each do |food| %>
        <div class="card-vert">
            <%= cl_image_tag food.photo, height: 300, width: 400, crop: :fill %>
            <div class="card-vert-infos">
                <div>
                    <h2>
                        <%= food.name %>
                    </h2>
                    <p>
                        <div class="ratings">
                            <i class="far fa-star"></i> <strong> <%= @user.avg_rating.to_f %> </strong> (<%= @user.ratings.count %> reviews)
                        </div>
                        <div class="location"> <i class="fas fa-map-marker-alt"></i> 200m away </div>
                    </p>
                </div>
            </div>
        </div>
        <% end  %>
    </div>
