<div class="container">
    <div class="form">
        <h1>Upload a new food</h1>
        <%= simple_form_for @food do |f| %>
        <%= simple_form_for @food, html: {multipart: true} do |f| %>
        <div class="upload-btn-wrapper text-center">
            <button type="button" class="btn-upload"><i class="fas fa-camera"></i></button>
            <input type="file" name="food[photo]" />
        </div>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
        <%= f.input :purchase_date %>
        <label class="control-label check_boxes optional">Categories</label>
        <div class="form-group">
            <input type="hidden" name="post[category_ids][]" value="">
            <div class="category-choices">
                <% Category.all.each do |category| %>
                <input class="hidden" type="checkbox" value="<%= category.id %>" name="food[category_ids][]" id="food_category_ids_<%= category.id %>">
                <label class="category-choice" for="food_category_ids_<%= category.id %>">
                    <%= category.name %>
                </label>
                <% end %>
            </div>
            <%= f.input :location %>
            <%= f.button :submit, class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
