var tab_content = document.querySelector('.tab-content');

var listings = document.getElementById('listings');
listings.classList.add("active");

var reviews = document.getElementById('reviews');
reviews.classList.remove("active");

function createNewCard(innerHTML = '') {
    tab_content.innerHTML = '';
    tab_content.insertAdjacentHTML('beforeend', innerHTML);
}

<% if @foods.any? %>
<% @foods.each do |food| %>
createNewCard('<%= j render "card", user: @user %>');
<% end %>

<% else %>
tab_content.insertAdjacentHTML('beforeend', "<p>No listings yet </p>");

<% end %>
