<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="card-img-top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
                <%= cl_image_tag @food.photo, height: 300, width: 400, crop: :fill %>
            </div>
            <div>
                <h3>
                    <%= @food.name %>
                </h3>
                <%= render 'shared/user-profile', user: @user %>
                <p>Date of Purchase:
                    <%= @food.purchase_date%>
                </p>
                <p>
                    <%= @food.description %>
                </p>
            </div>
            <div>
                <p>Preferred Pick-Up Time:</p>
                <p>Preferred Location:</p>
            </div>
            <div id="map" style="width: 100%;
        height: 300px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
    </div>
</div>
<div class="container" style="width: 400px; padding: 10px">
    <div class="d-flex justify-content-around">
      <%= link_to "Chat", food_messages_path(@food), class:"btn btn-primary" %>
    </div>
</div>

