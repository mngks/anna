<div class="banner p-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <h1><strong>svAnna</strong></h1>
    <p>Give Food a Second Life</p>
</div>
<div class="home-panel">
    <h3>Categories</h3>
    <div class="row justify-content-center px-2">
        <div class="cards-scrolling-wrapper">
            <% @categories.each do |category| %>
            <%= link_to root_path(category_name: category.name) do %>
            <div class="card-category" style="color: white; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('<%= cl_image_path category.photo, height: 300, width: 400, crop: :fill %>')">
                <%= category.name %>
            </div>
            <% end %>
            <% end %>
        </div>
    </div>
    <h3>All Listings</h3>
    <% @foods.each do |food| %>
    <% unless food.donations.find_by_confirmed(true) %>
    <%= link_to food_path(food) do%>
    <% coordinates = [ food.latitude , food.longitude ] %>
    <div class="big-card card-index-page">
        <%= cl_image_tag food.photo%>
        <div class="big-card-infos">
            <div>
                <h2>
                    <%= food.name %>
                </h2>
                <p>
                    <%= cl_image_tag food.donor.user.photo, class: "avatar-xs mr-2" %>
                    <%= food.donor.full_name %>
                </p>
            </div>
            <div class="big-card-location" data-coordinates="<%= coordinates.to_json %>">
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
</div>
