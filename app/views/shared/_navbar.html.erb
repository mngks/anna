
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if user_signed_in? %>

    <div>
        <%= link_to "Explore", root_path, class: "nav-link" %>
    </div>
    <div>
        <% if current_user.donor.nil? %>
        <%= link_to "Create Food", new_donor_path, class: "nav-link" %>

        <% else %>
         <%= link_to "Create Food", new_food_path, class: "nav-link" %>
        <% end %>
    </div>
    <div>
        <%= link_to "Messages", user_donations_path(current_user), class: "nav-link" %>
    </div>
  <% end %>

<div id="navbarSupportedContent">
      <ul class="mr-auto">
        <% if user_signed_in? %>
          <div class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to link_to "User Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <div></div> class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </div>
        <% end %>
      </ul>

    </div>
</div>


