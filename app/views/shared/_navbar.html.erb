<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="w-100 d-flex align-items-center justify-content-between">
        <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
            <div class="m-0 py-2  search-form-control form-group">
                <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search" aria-label="Search" />
            </div>
        </form>
        <div id="navbarSupportedContent">
            <ul class="mb-0">
                <% if user_signed_in? %>
                <div class="nav-item dropdown">
                    <%= cl_image_tag @user.photo, class: "avatar-sm dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <%= link_to "User Profile", user_path(current_user), class: "dropdown-item"  %>
                        <%= link_to "Messages", user_donations_path(current_user), class: "dropdown-item" %>
                        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                    </div>
                </div>
                <% else %>
                <div>
                    <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                </div>
                <% end %>
            </ul>
        </div>
    </div>
</div>
