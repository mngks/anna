<div class="d-flex align-items-center message-card mx-1 <%= message.user == current_user ? 'ml-auto justify-content-between' : 'mr-auto' %>">
    <% if message.user != current_user %>

      <div>
        <%= cl_image_tag message.user.photo, class:"avatar-sm mr-3" %>
      </div>
    <% end %>

    <div>
        <h6>
            <%= message.message_time %>
        </h6>
        <p>
            <%= message.content %>
        </p>
    </div>

    <% if message.user == current_user %>
      <div>
        <%= cl_image_tag message.user.photo, class:"avatar-sm ml-3" %>
      </div>
    <% end %>
</div>
