<div class="container">
    <div class="container-header">
        <h2>My conversations</h2>
    </div>
    <% @conversations.each do |donation| %>
    <% unless donation.messages.empty?  %>
    <%= link_to donation_messages_path(donation) do %>
    <div class="card-hori">
        <div class="card-photo">
            <%= cl_image_tag donation.food.photo%>
        </div>
        <div class="card-content">
            <p><strong>
                    <%= donation.food.name %> by
                    <%= donation.food.donor.user.username %>
                </strong>
                <% if donation.confirmed %>
                (Confirmed)
                <% else %>
                (Unconfirmed)
                <% end %>
            </p>
            <% unless donation.messages.empty?  %>
            <p> Latest message:
                <%= donation.messages.last.content %> by
                <%= donation.messages.last.user.username %>
            </p>
            <p>
                <%= current_user.unread_messages.count %> unread messages </p>
            <% end %>
            <p>
                View Chat
            </p>
        </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
</div>
</div>
</div>
